@model VmHonorary
<div class="container-fluid">

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4>荣誉资质</h4>
                </div>
                <div class="card-body">
                    <form class="form-horizontal" asp-action="AddHonorary" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id"/>
                        <div class="form-group">
                            <label class="col-xs-12" asp-for="Title">描述</label>
                            <div class="col-xs-12">
                                <input class="form-control" asp-for="Title" placeholder="描述..">
                            </div>
                        </div>
                        <div class="form-group">
                            @if (!string.IsNullOrEmpty(Model?.Image))
                            {
                                <img src="@Model.Image" alt="upload" style="max-width: 100%"/>
                            }
                            <label class="col-xs-12" for="example-file-input">上传图片</label>
                            <div class="col-xs-12">
                                <input type="file" id="example-file-input" name="image">
                            </div>
                        </div>
                        <partial name="_ErrorTipsPartial"/>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <button class="btn btn-primary" type="submit">提交</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

</div>