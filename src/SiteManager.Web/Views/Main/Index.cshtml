@model IList<VmBanner>


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>Banner列表</h4>
                </div>
                <div class="card-body">
                    <h5>响应式表格</h5>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                            <tr>
                                <th>图片</th>
                                <th>链接</th>
                                <th>标题</th>
                                <th>内容</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.Image</th>
                                    <td>@item.Path</td>
                                    <td>@item.Title</td>
                                    <td>@item.Content</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>